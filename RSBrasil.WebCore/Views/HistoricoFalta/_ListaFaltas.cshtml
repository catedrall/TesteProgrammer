@model List<RSBrasil.Model.DTOs.FuncionarioFaltaDTO>
{
    <div class="panel panel-default">
        <div class="panel-body">
            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th class="center">Nome</th>
                        <th class="center">Data falta</th>
                        <th class="center"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                        <tr class="gradeA">
                            <td>@item.NomeFuncionario</td>
                            <td>@item.DataFalta</td>
                            <td class="center">
                                <i class="fa fa-pencil"></i>&nbsp;<i class="fa fa-trash-o"></i>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.ActionLink("Cadastrar nova", "Novo", "HistoricoFaltas", null, new { @class = "btn btn-primary" })
        </div>
    </div>
}
else
{
    <p>Não existem clientes cadastrados</p>
    @Html.ActionLink("Cadastrar nova", "Novo", "HistoricoFaltas", null, new { @class = "btn btn-primary" })
}
