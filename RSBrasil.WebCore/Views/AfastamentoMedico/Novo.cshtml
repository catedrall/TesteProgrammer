@model RSBrasil.Model.DTOs.AfastamentoMedicoDTO

@{
    ViewData["Title"] = "Novo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Uniforme</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Novo uniforme
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form asp-action="Novo">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Descricao" class="control-label"></label>
                                    <input asp-for="Descricao" class="form-control" />
                                    <span asp-validation-for="Descricao" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DataFimAfastamento" class="control-label"></label>
                                    <input asp-for="DataFimAfastamento" class="form-control" />
                                    <span asp-validation-for="DataFimAfastamento" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DataInicioAfastamento" class="control-label"></label>
                                    <input asp-for="DataInicioAfastamento" class="form-control" />
                                    <span asp-validation-for="DataInicioAfastamento" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdDocumento" class="control-label"></label>
                                    @Html.DropDownList("IdDocumento", ViewBag.DocsList as SelectList, new { @class = "form-control" })
                                    <span asp-validation-for="IdDocumento" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdFuncionario" class="control-label"></label>
                                    @Html.DropDownList("IdFuncionario", ViewBag.IdFuncionario as SelectList, new { @class = "form-control" })
                                    <span asp-validation-for="IdFuncionario" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdTipoAfastamento" class="control-label"></label>
                                    <input asp-for="IdTipoAfastamento" class="form-control" />
                                    <span asp-validation-for="IdTipoAfastamento" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Id" class="control-label"></label>
                                    <input asp-for="Id" class="form-control" />
                                    <span asp-validation-for="Id" class="text-danger"></span>
                                </div>

                                <button type="submit" class="btn btn-primary">Salvar</button>
                                @*<button type="reset" class="btn btn-default">Reset Button</button>*@
                            </form>
                            <
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->