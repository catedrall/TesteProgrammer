@model List<RSBrasil.Model.Entidades.Cliente>
@*<p>
        @Html.ActionLink("Novo cliente", "Novo", "Clientes")
    </p>*@
@if (Model.Count > 0)
{
    <div class="panel panel-default">
        <div class="panel-body">
            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th class="center">Código</th>
                        <th class="center">Nome</th>
                        <th class="center">Contato</th>
                        <th class="center">Telefone</th>
                        <th class="center"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                        <tr class="gradeA">
                            <td>@item.Id</td>
                            @*<td><a href="/Edit=id">@item.NomeFantasia</a></td>*@
                            <td>@item.NomeFantasia</td>
                            <td>@item.Contato</td>
                            <td>@item.Telefone</td>
                            <td class="center">
                                <i class="fa fa-pencil"></i>&nbsp;<i class="fa fa-trash-o"></i>

                                @*<button class="btn btn-danger" onclick="Desativar(@item.Id, @item.NomeFantasia)">Excluir</button>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.ActionLink("Cadastrar novo", "Novo", "Cliente", null, new { @class = "btn btn-primary" })
        </div>
    </div>
}
else
{
    <p>Não existem clientes cadastrados</p>
    @Html.ActionLink("Cadastrar novo", "Novo", "Cliente", null, new { @class = "btn btn-primary" })
}
