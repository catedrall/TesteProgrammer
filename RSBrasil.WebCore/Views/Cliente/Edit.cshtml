
@{
    ViewBag.Title = "Cadastro";
}

<div id="page-wrapper" style="margin-left: 10%;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@ViewBag.Title</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12 ml-3">
                            <form role="form" id="frmCliente" method="post">
                                <div class="form-group">
                                    <input type="hidden" class="form-control" id="hdId">
                                    <label>Razão Social</label>
                                    <input id="txtRazaoSocial" class="form-control" placeholder="Razão Social">
                                    <br />
                                    <label>Nome fantasia</label>
                                    <input id="txtNome" class="form-control" placeholder="Nome fantasia">
                                    <br />
                                    <label>CNPJ</label>
                                    <input id="txtCNPJ" class="form-control" placeholder="CNPJ">
                                    <br />
                                    <label>Contato</label>
                                    <input id="txtContato" class="form-control" placeholder="Contato">
                                    <br />
                                    <label>Telefone</label>
                                    <input id="txtTelefone" class="form-control" placeholder="Telefone">
                                    <br />
                                    <label>E-mail</label>
                                    <input id="txtEmail" class="form-control" placeholder="E-mail">
                                    <br />
                                    <button class="btn btn-info" onclick="javascript:Limpar()">Limpar</button>
                                    &nbsp;
                                    <button class="btn btn-success" onclick="javascript:Inserir(event)">Salvar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="~/js/pages/login.js"></script>
    <script src="~/js/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/js/pages/clientes.js"></script>
}