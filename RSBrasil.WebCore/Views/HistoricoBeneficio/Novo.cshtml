@model RSBrasil.Model.DTOs.HistoricoBeneficiosDTO

@{
    ViewData["Title"] = "Novo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Benefícios</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Novo benefício
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form asp-action="Novo">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                
                                <div class="form-group">
                                    <label asp-for="DataPagamento" class="control-label"></label>
                                    <input asp-for="DataPagamento" class="form-control" />
                                    <span asp-validation-for="DataPagamento" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group">
                                    <label asp-for="IdTipoBeneficio" class="control-label"></label>
                                    @Html.DropDownList("IdTipoBeneficio", ViewBag.BeneficiosList as SelectList, new { @class = "form-control" })
                                    <span asp-validation-for="IdTipoBeneficio" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="IdFuncionario" class="control-label"></label>
                                    @Html.DropDownList("IdFuncionario", ViewBag.IdFuncionario as SelectList, new { @class = "form-control" })
                                    <span asp-validation-for="IdFuncionario" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group">
                                    <label asp-for="Valor" class="control-label"></label>
                                    <input asp-for="Valor" class="form-control" />
                                    <span asp-validation-for="Valor" class="text-danger"></span>
                                </div>

                                <button type="submit" class="btn btn-success">Salvar</button>
                                @Html.ActionLink("Cancelar", "Index", "HistoricoFaltas", null, new { @class = "btn btn-danger" })
                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
@section Scripts {
    <script src="~/vendor/mascara/jquery.mask.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#DataPagamento').mask('00/00/0000');
            $('#Valor').mask('#.##0,00', { reverse: true });
        });
    </script>
}