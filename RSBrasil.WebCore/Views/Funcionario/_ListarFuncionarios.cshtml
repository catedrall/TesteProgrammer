@model List<RSBRasil.Model.Entidades.Funcionario>

@if (Model.Count > 0)
{
    <div class="panel panel-default">
        <div class="panel-body">
            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th class="center">Nome</th>
                        <th class="center">Telefone</th>
                        <th class="center">Férias vencidas</th>
                        <th class="center"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                        <tr class="gradeA">
                            @*<td><a href="/Edit=id">@item.NomeFantasia</a></td>*@
                            <td>@item.Nome</td>
                            <td>@item.Telefone</td>
                            <td>@item.FeriasGozar</td>
                            <td class="center">
                                <i class="fa fa-pencil"></i>&nbsp;<i class="fa fa-trash-o"></i>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.ActionLink("Cadastrar novo", "Novo", "Funcionario", null, new { @class = "btn btn-primary" })
        </div>
    </div>
}
else
{
    <p>Não existem funcionários cadastrados</p>
    @Html.ActionLink("Cadastrar novo", "Novo", "Funcionario", null, new { @class = "btn btn-primary" })
}
